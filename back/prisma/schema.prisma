// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Imovel {
  id              Int                 @id @default(autoincrement())
  titulo          String  
  descricaoCurta  String?             @db.Text
  descricaoLonga  String?             @db.Text
  fotos           Json                // Array de URLs das fotos no S3
  imagemCapa      String?             // URL da imagem de capa no S3
  cep             String?
  endereco        String?
  bairro          String?
  cidade          String?
  estado          String?
  latitude        Float?              // Latitude para Google Maps
  longitude       Float?              // Longitude para Google Maps
  valor           Decimal?
  valorPromo      Decimal?
  codigo          String              @unique
  suites          Int?
  dormitorios     Int?
  banheiros       Int?
  garagem         Boolean             @default(false)
  geminada        Boolean             @default(false)
  terrenoMedidas  String?
  terrenoM2       Int?
  areaConstruida  Int?  
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  tipo            ImovelTipo[]
  finalidade      ImovelFinalidade[]
  categorias      ImovelCategoria[]
  posts           Post[]

  @@map("imoveis")
  @@index([codigo])
  @@index([cidade])
}

model Tipo {
  id        Int          @id @default(autoincrement())
  nome      String       @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  imoveis   ImovelTipo[]

  @@map("tipos")
}

model ImovelTipo {
  id        Int      @id @default(autoincrement())
  imovelId  Int
  tipoId    Int
  imovel    Imovel   @relation(fields: [imovelId], references: [id], onDelete: Cascade)
  tipo      Tipo     @relation(fields: [tipoId], references: [id], onDelete: Cascade)

  @@unique([imovelId, tipoId])
  @@map("imovel_tipos")
}

model Finalidade {
  id        Int                @id @default(autoincrement())
  nome      String             @unique
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  imoveis   ImovelFinalidade[]

  @@map("finalidades")
}

model ImovelFinalidade {
  id            Int         @id @default(autoincrement())
  imovelId      Int
  finalidadeId  Int
  imovel        Imovel      @relation(fields: [imovelId], references: [id], onDelete: Cascade)
  finalidade    Finalidade  @relation(fields: [finalidadeId], references: [id], onDelete: Cascade)

  @@unique([imovelId, finalidadeId])
  @@map("imovel_finalidades")
}

model Categoria {
  id        Int               @id @default(autoincrement())
  nome      String            @unique
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  imoveis   ImovelCategoria[]

  @@map("categorias")
}

model ImovelCategoria {
  id          Int       @id @default(autoincrement())
  imovelId    Int
  categoriaId Int
  imovel      Imovel    @relation(fields: [imovelId], references: [id], onDelete: Cascade)
  categoria   Categoria @relation(fields: [categoriaId], references: [id], onDelete: Cascade)

  @@unique([imovelId, categoriaId])
  @@map("imovel_categorias")
}

model Destaque {
  id            Int      @id @default(autoincrement())
  titulo        String
  descricao     String   @db.Text
  imagem        String   // URL da imagem no S3
  valor         Decimal?
  area          Int?     // Área em m²
  quartos       Int?
  banheiros     Int?
  garagem       Int?     // Número de vagas
  textoBotao    String
  link          String
  ativo         Boolean  @default(true)
  ordem         Int      @default(0) // Para ordenação no carrossel
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("destaques")
  @@index([ativo])
  @@index([ordem])
}

// BLOG SYSTEM

model BlogCategoria {
  id        Int      @id @default(autoincrement())
  nome      String   @unique
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blog_categorias")
}

enum PostStatus {
  RASCUNHO
  PUBLICADO
}

model Post {
  id              Int           @id @default(autoincrement())
  titulo          String
  slug            String        @unique
  chamada         String?       @db.Text // Resumo
  conteudo        String        @db.LongText // Conteúdo completo (Rich Text)
  imagemCapa      String?       // URL da imagem no S3
  dataPublicacao  DateTime?
  status          PostStatus    @default(RASCUNHO)

  // Relacionamentos
  categoriaId     Int
  categoria       BlogCategoria @relation(fields: [categoriaId], references: [id])

  imovelId        Int?
  imovel          Imovel?       @relation(fields: [imovelId], references: [id])

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("posts")
  @@index([slug])
  @@index([status])
}